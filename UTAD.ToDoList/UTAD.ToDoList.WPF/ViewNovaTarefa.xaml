        <TextBox x:Name="tbHoraInicio" Style="{StaticResource WatermarkTextBoxStyle}" local:WatermarkService.Watermark="Hora" HorizontalContentAlignment="Center" Foreground="#737373" Margin="201,205,0,0" FontSize="13" FontFamily="Poppins" Background="#494949" BorderBrush="#050214" TextWrapping="Wrap" VerticalContentAlignment="Center" Grid.Column="1" Height="30" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="tbMinutosInicio" Style="{StaticResource WatermarkTextBoxStyle}" local:WatermarkService.Watermark="Minutos" HorizontalContentAlignment="Center" Foreground="#737373" Margin="264,205,0,0" FontSize="13" FontFamily="Poppins" Background="#494949" BorderBrush="#050214" TextWrapping="Wrap" VerticalContentAlignment="Center" Grid.Column="1" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="62"/>
