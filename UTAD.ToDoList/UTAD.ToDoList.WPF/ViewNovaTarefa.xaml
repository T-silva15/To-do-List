<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UTAD.ToDoList.WPF"
        xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" x:Class="UTAD.ToDoList.WPF.ViewNovaTarefa"
        xmlns:viewModels="clr-namespace:UTAD.ToDoList.WPF.Models"
        mc:Ignorable="d"
        Title="ViewNovaTarefa" Height="450" Width="800" Background="#050214">

    <Window.DataContext>
        <viewModels:SchedulerViewModel/>
    </Window.DataContext>

    <Grid>
        <TextBlock Text="Nova" Margin="50,50,636,315" Height="30" Width="61" FontSize="25" FontFamily="Nunito ExtraBold" Foreground="White" TextWrapping="Wrap"/>
        <TextBlock Text="Tarefa" Margin="142,70,582,334" Height="30" Width="75" FontSize="25" FontFamily="Nunito ExtraBold" Foreground="#C10C99" TextWrapping="Wrap"/>

        <Syncfusion:SfScheduler SelectedDate="{Binding SelectedDate, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="276,50,0,0" ViewType="Month" Width="433" Height="346">
            <Syncfusion:SfScheduler.MonthViewSettings>
                <Syncfusion:MonthViewSettings>
                    <Syncfusion:MonthViewSettings.MonthCellTemplate>
                        <DataTemplate>
                            <Border Background="#050214">
                                <TextBlock HorizontalAlignment="Center" Foreground="White" Text="{Binding DateTime.Day}"/>
                            </Border>
                        </DataTemplate>
                    </Syncfusion:MonthViewSettings.MonthCellTemplate>

                    <Syncfusion:MonthViewSettings.ViewHeaderTemplate>
                        <DataTemplate>
                            <Border Background="#050214">
                                <TextBlock FontFamily="Nunito Bold"
                                           Foreground="White"
                                           Background="#050214"
                                           Text="{Binding DayText}"/>
                            </Border>
                        </DataTemplate>
                    </Syncfusion:MonthViewSettings.ViewHeaderTemplate>
                </Syncfusion:MonthViewSettings>
            </Syncfusion:SfScheduler.MonthViewSettings>

            <Syncfusion:SfScheduler.HeaderTemplate>
                <DataTemplate>
                    <Grid Background="#050214">
                        <Button Command="{Binding MoveToPreviousMonthCommand}" HorizontalAlignment="Left" Content="&lt;"/>
                        <TextBlock Text="{Binding DisplayDate, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Syncfusion:SfScheduler}}, StringFormat='MMMM yyyy'}" FontFamily="Nunito Bold" FontSize="17" HorizontalAlignment="Center" Foreground="White" Width="252" TextAlignment="Center" VerticalAlignment="Center"/>
                        <Button Command="{Binding MoveToNextMonthCommand}" HorizontalAlignment="Right" Content="&gt;"/>
                    </Grid>
                </DataTemplate>
            </Syncfusion:SfScheduler.HeaderTemplate>
        </Syncfusion:SfScheduler>
    </Grid>
</Window>
