<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UTAD.ToDoList.WPF"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" xmlns:viewModels="clr-namespace:UTAD.ToDoList.WPF.Models" x:Class="UTAD.ToDoList.WPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="CanResize" Height="768" Width="1024" MinHeight="768" MinWidth="1024" Icon="Images/todo.ico" Background="#050214" WindowState="Maximized" WindowStartupLocation="CenterScreen" Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Nunito Regular"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C10C99"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:SchedulerModel/>
    </Window.DataContext>

    <Grid>
        <TextBlock Text="To-Do List" Margin="298,29,0,0" FontSize="40" FontFamily="Nunito ExtraBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"/>
        <TextBlock Text="DashBoard" Margin="512,29,0,0" FontSize="40" FontFamily="Nunito ExtraBold" Foreground="#C10C99" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"/>

        <!-- Filtros -->
        <Button Content="Todas" Margin="76,568,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Width="32"/>
        <Image Source="Images/All Icon.png" HorizontalAlignment="Left" Width="22" Height="23" Margin="49,568,0,0" VerticalAlignment="Top"/>

        <Button Content="Completas" Margin="76,594,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Width="58"/>
        <Image Source="Images/Completed Icon.png" HorizontalAlignment="Left" Width="22" Height="23" Margin="49,594,0,0" VerticalAlignment="Top"/>

        <Button Content="Pendentes" Margin="76,620,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Width="57"/>
        <Image Source="Images/Pending Icon.png" HorizontalAlignment="Left" Width="22" Height="24" Margin="49,620,0,0" VerticalAlignment="Top"/>

        <!-- Outros -->
        <Button x:Name="btnNova_Tarefa" Click="btnNova_Tarefa_Click" Content="Nova Tarefa" Margin="76,666,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="21" Width="65"/>
        <Image Source="Images/NewTask Icon.png" HorizontalAlignment="Left" Width="22" Height="22" Margin="49,666,0,0" VerticalAlignment="Top"/>

        <Button x:Name="btnPerfil" Click="BtnPerfil_Click" Content="Perfil" Margin="76,692,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="21" Width="29"/>
        <Image Source="Images/Perfil Icon.png" HorizontalAlignment="Left" Width="22" Height="22" Margin="49,692,0,0" VerticalAlignment="Top"/>

        <!-- Separador Central -->
        <Separator HorizontalAlignment="Left" Margin="68,425,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>

            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        <!-- Tarefas -->
        <!-- Prioritárias -->
        <Image Source="Images/Prioritaria.png" HorizontalAlignment="Left" Width="25" Height="25" Margin="410,204,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.6,0.077"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="86" Height="23" Margin="435,205,0,0" TextWrapping="Wrap" Text="Prioritária" Foreground="#E85671" FontFamily="Nunito" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Margin="494,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="498">
            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        <!-- Importante -->
        <Image Source="Images/Importante.png" HorizontalAlignment="Left" Width="25" Height="25" Margin="410,304,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="91" Height="23" Margin="435,305,0,0" TextWrapping="Wrap" Text="Importante" Foreground="#FE8A5F" FontFamily="Nunito" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Margin="526,317,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="466">
            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        <!-- Normal -->
        <Image Source="Images/Normal.png" HorizontalAlignment="Left" Width="25" Height="25" Margin="410,404,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="86" Height="23" Margin="435,405,0,0" TextWrapping="Wrap" Text="Normal" Foreground="#849EEA" FontFamily="Nunito" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Margin="494,418,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="498">
            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        <!-- Pouco Importante -->
        <Image Source="Images/Pouco_Importante.png" HorizontalAlignment="Left" Width="25" Height="25" Margin="410,504,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Height="23" Margin="435,505,0,0" TextWrapping="Wrap" Text="Pouco Importante" Foreground="#87FF81" FontFamily="Nunito" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Margin="580,517,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="412">
            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        

        <syncfusion:SfScheduler x:Name="sfCalendario" ItemsSource="{Binding Meetings}" ViewType="Month" Margin="10,174,671,0" Height="366" VerticalAlignment="Top">
            <syncfusion:SfScheduler.AppointmentMapping>
                <syncfusion:AppointmentMapping 
                    Subject="Name"
                    Notes="Description"
                    StartTime="From" 
                    EndTime="To" 
                    AppointmentBackground="BackgroundColor"
                    RecurrenceRule="RecurrenceRule"
                    Id="Id"/>
            </syncfusion:SfScheduler.AppointmentMapping>

            <syncfusion:SfScheduler.MonthViewSettings>
                <syncfusion:MonthViewSettings>
                    <syncfusion:MonthViewSettings.MonthCellTemplate>
                        <DataTemplate>
                            <Border Background="#050214">
                                <TextBlock HorizontalAlignment="Center" Foreground="White" Text="{Binding DateTime.Day}"/>
                            </Border>
                        </DataTemplate>
                    </syncfusion:MonthViewSettings.MonthCellTemplate>

                    <syncfusion:MonthViewSettings.ViewHeaderTemplate>
                        <DataTemplate>
                            <Border Background="#050214">
                                <TextBlock FontFamily="Nunito Bold"
                                    Foreground="White"
                                    Background="#050214"
                                    Text="{Binding DayText}"/>
                            </Border>
                        </DataTemplate>
                    </syncfusion:MonthViewSettings.ViewHeaderTemplate>
                </syncfusion:MonthViewSettings>
            </syncfusion:SfScheduler.MonthViewSettings>

            <syncfusion:SfScheduler.HeaderTemplate>
                <DataTemplate>
                    <Grid Background="#050214">
                        <Button Command="{Binding MoveToPreviousMonthCommand}" Height="24" Width="16" HorizontalAlignment="Left" Content="&lt; " Click="ButtonBackward_Click"/>
                        <TextBlock Text="{Binding}" FontFamily="Nunito Bold" FontSize="17" HorizontalAlignment="Center" Foreground="White" Width="252" TextAlignment="Center" VerticalAlignment="Center"/>
                        <Button Command="{Binding MoveToNextMonthCommand}" Content="&gt;" Click="ButtonForward_Click" HorizontalAlignment="Right" Width="16" />
                    </Grid>
                </DataTemplate>
            </syncfusion:SfScheduler.HeaderTemplate>
        </syncfusion:SfScheduler>
    </Grid>


</Window>
