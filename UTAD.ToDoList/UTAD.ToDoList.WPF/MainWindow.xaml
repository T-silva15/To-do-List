<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UTAD.ToDoList.WPF"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="UTAD.ToDoList.WPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="CanResize" Height="768" Width="1024" MinHeight="768" MinWidth="1024" Icon="Images/todo.ico" Background="#050214" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Poppins-Regular"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC10C99"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Label Content="To-Do List" Foreground="White" FontSize="40"  FontFamily="Poppins-Regular" Margin="322,29,512,655" Width="190" RenderTransformOrigin="-1.187,0.634" Height="68" MinHeight="68" MinWidth="190"/>
        <Label Content="DashBoard" Foreground="#C10C99" FontSize="40" FontFamily="Poppins-Regular" Margin="540,29,258,655" Width="225" RenderTransformOrigin="0.385,0.476" Height="68" MinHeight="68" MinWidth="225"/>

        <!-- Calendário -->
        <syncfusion:CalendarEdit Date="1/1/2020" HorizontalAlignment="Left" Height="200" Margin="40,169,0,0" VerticalAlignment="Top" Width="200"/>

        <!-- Filtros -->
        <Button Content="Todas" Margin="58,430,0,0"/>
        <Image Source="Images/All Icon.png" HorizontalAlignment="Left" Width="18" Height="18" Margin="40,429,0,0" VerticalAlignment="Top"/>

        <Button Content="Completas" Margin="58,450,0,0"/>
        <Image Source="Images/Completed Icon.png" HorizontalAlignment="Left" Width="18" Height="18" Margin="40,449,0,0" VerticalAlignment="Top"/>

        <Button Content="Pendentes" Margin="58,470,0,0" Background="Transparent"/>
        <Image Source="Images/Pending Icon.png" HorizontalAlignment="Left" Width="18" Height="18" Margin="40,469,0,0" VerticalAlignment="Top"/>

        <!-- Outros -->
        <Button Content="Nova Tarefa" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,520,0,0" Background="Transparent" Foreground="White" BorderThickness="0" FontFamily="Poppins-Regular"/>
        <Button Content="Perfil" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,540,0,0" Background="Transparent" Foreground="White" BorderThickness="0" FontFamily="Poppins-Regular"/>

        <!-- Separador Central -->
        <Separator HorizontalAlignment="Left" Margin="-22,389,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>

            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        <!-- Tarefas -->
        <!-- Prioritárias -->
        <Image Source="Images/fire_fill.png" HorizontalAlignment="Left" Width="18" Height="18" Margin="322,172,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="86" Height="23" Margin="345,169,0,0" TextWrapping="Wrap" Text="Prioritária" Foreground="White" FontFamily="Poppins" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Margin="404,181,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="498">
            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        <!-- Importante -->
        <Image Source="Images/fire_fill.png" HorizontalAlignment="Left" Width="18" Height="18" Margin="322,272,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="91" Height="23" Margin="345,269,0,0" TextWrapping="Wrap" Text="Importante" Foreground="White" FontFamily="Poppins" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Margin="436,281,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="466">
            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        <!-- Normal -->
        <Image Source="Images/fire_fill.png" HorizontalAlignment="Left" Width="18" Height="18" Margin="322,371,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="86" Height="23" Margin="345,369,0,0" TextWrapping="Wrap" Text="Normal" Foreground="White" FontFamily="Poppins" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Margin="404,382,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="498">
            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

        <!-- Pouco Importante -->
        <Image Source="Images/fire_fill.png" HorizontalAlignment="Left" Width="18" Height="18" Margin="322,472,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Height="23" Margin="345,469,0,0" TextWrapping="Wrap" Text="Pouco Importante" Foreground="White" FontFamily="Poppins" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Margin="490,481,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="412">
            <Separator.Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Separator}">
                                <Grid>
                                    <Rectangle Width="601" Height="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="#7e7e7e" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Separator.Style>
        </Separator>

    </Grid>


</Window>
